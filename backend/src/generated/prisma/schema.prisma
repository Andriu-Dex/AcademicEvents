generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  id_usu      String      @id @default(uuid())
  ced_usu     String      @unique
  nom_usu     String
  ape_usu     String
  cor_usu     String      @unique
  con_usu     String
  cel_usu     String      @db.Char(10) //Acepta solo 10 caracteres
  rol_usu     rol_usuario
  fec_cre_usu DateTime    @default(now())
}

model carrera {
  id_car      String   @id @default(uuid())
  nom_car     String   @unique
  est_car     Boolean  @default(true)
  fec_cre_car DateTime @default(now())
}

enum rol_usuario {
  ADMIN
  ESTUDIANTE
}
